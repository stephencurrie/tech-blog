      
      
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{blog.name}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">
            Posted by {{blog.user_id}} on {{blog.date_created}}
          </h6>
          <p class="card-text">
            {{blog.description}}
          </p>
        </div>
      </div>
      <div class="form-group">
          <h5 class="card-title">Submit Comment</h5>
        <textarea
          class="form-control"
          id="edit-text-area"
          rows="3"
        >{{description}}</textarea>
      </div>

<button id="somment-submit" data-id="{{id}}">Submit Comment</button>

{{#each comments as |comment|}}
<div class="row">
    <div class="card">
    <div class="card-body">
        <p class="card-text">{{comment.content}}</p>
    </div>
    <div class="card-footer text-muted">
        Posted by {{comment.author}}
        on {{comment.date}}
    </div>
</div>
</div>
{{/each}}